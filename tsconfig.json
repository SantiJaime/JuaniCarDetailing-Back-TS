{
  "exclude": ["node_modules", "dist"],
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2021",
    "module": "commonjs",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "types": ["node"],
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "skipLibCheck": true
  }
}
